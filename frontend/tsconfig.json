{
  "compilerOptions": {
    "module": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["DOM", "ES2015"],
    "allowSyntheticDefaultImports": true,
    "types": ["jquery", "materialize-css"],
    "typeRoots": ["../node_modules/@types"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "jquery": ["./node_modules/jquery/dist/jquery"]
    }
  },
  "exclude": ["node_modules"]
}
