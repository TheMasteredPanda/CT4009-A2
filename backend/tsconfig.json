{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "build",
    "lib": ["ES2015"],
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": false,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "listEmittedFiles": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "Node"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "build"]
}
